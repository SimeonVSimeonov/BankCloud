@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<section class="section-agents section-t8">
    <div class="col-md-5 text-center mx-auto">
        <h4>Associate your @Model.LoginProvider account.</h4>
        <hr />

        <p class="color-b">
            You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
            Please enter an email address for this site below and click the Register button to finish
            logging in.
        </p>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-5 text-center mx-auto">
                <form class="form-a fa-sign-in" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Input.Name"></label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.IsAgent">
                                    <input asp-for="Input.IsAgent" />
                                    Become Agent
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-a">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
