                                        }
                                        @if (item == GlobalConstants.INSURANCE)
                                        {
                                            <a href="/CreditScorings/InsuranceRejectedRequests"><span class="price-a">Rejected</span></a>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer-a">
                                    <ul class="card-info d-flex justify-content-around">
                                        <li>
                                            <h4 class="card-info-title">You Have</h4>
                                            @if (item == GlobalConstants.SAVE)
                                            {
                                                <span>
                                                    @Model.OrderedLoans.Where(x => x.Status == "Rejected").Count() Rejected
                                                </span>
                                            }
                                            @if (item == GlobalConstants.LOAN)
                                            {
