                                        @if (item == GlobalConstants.SAVE)
                                        {
                                            <a href="/CreditScorings/SaveApprovedRequests"><span class="price-a">Approved</span></a>
                                        }
                                        @if (item == GlobalConstants.LOAN)
                                        {
                                            <a href="/CreditScorings/LoanApprovedRequests"><span class="price-a">Approved</span></a>
                                        }
                                        @if (item == GlobalConstants.INVESTMENT)
