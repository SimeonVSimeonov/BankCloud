                                            <a href="/CreditScorings/InvestmentApprovedRequests"><span class="price-a">Approved</span></a>
                                        }
                                        @if (item == GlobalConstants.INSURANCE)
                                        {
                                            <a href="/CreditScorings/InsuranceApprovedRequests"><span class="price-a">Approved</span></a>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer-a">
                                    <ul class="card-info d-flex justify-content-around">
                                        <li>
                                            <h4 class="card-info-title">You Have</h4>
                                            @if (item == GlobalConstants.SAVE)
                                            {
