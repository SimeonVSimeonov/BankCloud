@model BankCloud.Models.BindingModels.Accounts.AccountActivateInputModel
@using BankCloud.Data.Entities;


@{
    ViewData["Title"] = "Activate";
}

<section class="section-agents section-t8">
    <div class="container-fluid text-center">
        <div class="title-single-box">
            <h1 class="title-single"><span class="color-b">Activate Account</span></h1>
            <span class="color-text-a">Please insert your data</span>
        </div>
        <hr />
        <div class="container">
            <div class="col-md-5 mx-auto">
                <form asp-action="AccountActivate" class="form-a fa-sign-in" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Middlename" class="control-label"></label>
                            <input asp-for="Middlename" class="form-control" />
                            <span asp-validation-for="Middlename" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Surname" class="control-label"></label>
                            <input asp-for="Surname" class="form-control" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="IdentityNumber" class="control-label"></label>
                            <input asp-for="IdentityNumber" class="form-control" />
                            <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Address.Country" class="control-label"></label>
                            <input asp-for="Address.Country" class="form-control" />
                            <span asp-validation-for="Address.Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Address.City" class="control-label"></label>
                            <input asp-for="Address.City" class="form-control" />
                            <span asp-validation-for="Address.City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Address.Street" class="control-label"></label>
                            <input asp-for="Address.Street" class="form-control" />
                            <span asp-validation-for="Address.Street" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Account.MonthlyIncome" class="control-label"></label>
                            <input asp-for="Account.MonthlyIncome" class="form-control" />
                            <span asp-validation-for="Account.MonthlyIncome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="AdUrl" class="control-label"></label>
                            <input asp-for="AdUrl" type="file" class="form-control-file" />
                            <span asp-validation-for="AdUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Account.Currency" class="control-label"></label>
                            <select asp-for="Account.Currency" class="custom-select">
                                <option selected>Curency</option>
                                @foreach (var curency in (List<Currency>)ViewData["Curencies"])
                                {
                                    <option value="@curency.Id">@curency.IsoCode</option>
                                };
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Activate" class="btn btn-a" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a href="/">Home</a>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
