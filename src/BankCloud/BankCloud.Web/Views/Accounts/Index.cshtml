@model IEnumerable<BankCloud.Models.ViewModels.UsersAccountViewModel>

@{
    ViewData["Title"] = "Index";
}

<section class="section-agents section-t8">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Accounts</h1>
                    <span class="color-text-a">Grid Accounts</span>
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-between">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Accounts/Create">Create New</a>
                        </li>
                    </ol>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Home</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<section class="property-grid grid">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="grid-option">
                    @*<form>
                            <select class="custom-select">
                                <option selected>All</option>
                                <option value="1">New to Old</option>
                                <option value="2">Old  to New</option>
                            </select>
                        </form>*@
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card-box-a card-shadow">
                        <div class="img-box-a">
                            <img src="~/img/loan-2.jpg" alt="" class="img-a img-fluid">
                        </div>
                        <div class="card-overlay">
                            <div class="card-overlay-a-content">
                                <div class="card-header-a">
                                    <h2 class="card-title-a">
                                        <a href="#">
                                            @item.CurrencyName
                                            <br /> @item.IsoCode
                                            <br /><span class="h4">@item.IBAN</span>
                                        </a>
                                    </h2>
                                </div>
                                <div class="card-body-a">
                                    <div class="price-box d-flex justify-content-between">
                                        <a href="/Accounts/Charge/@item.Id"><span class="price-a">Charge</span></a>
                                        <a href="/Accounts/Charge/@item.Id"><span class="price-a">Detail</span></a>
                                    </div>
                                </div>
                                <div class="card-footer-a">
                                    <ul class="card-info d-flex justify-content-around">
                                        <li>
                                            <h4 class="card-info-title">Amount</h4>
                                            <span>
                                                @item.Balance
                                            </span>
                                        </li>
                                        <li>
                                            <h4 class="card-info-title">Income</h4>
                                            <span>
                                                @item.MonthlyIncome
                                            </span>
                                        </li>
                                        <li>
                                            <h4 class="card-info-title">OutCome</h4>
                                            <span>
                                                @item.MonthlyOutCome
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>