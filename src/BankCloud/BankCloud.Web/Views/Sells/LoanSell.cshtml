@using BankCloud.Data.Entities;
@model BankCloud.Models.BindingModels.SellsLoanInputModel

@{
    ViewData["Title"] = "LoanSell";
}

<section class="section-agents section-t8">
    <div class="container-fluid text-center">
        <div class="title-single-box">
            <h1 class="title-single"><span class="color-b">Create New Loan</span></h1>
            <span class="color-text-a">Please insert your conditions</span>
        </div>
        <hr />
        <div class="container">
            <div class="col-md-5 mx-auto">
                <form asp-action="Loan" class="form-a fa-sign-in">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="InterestRate" class="control-label"></label>
                            <input asp-for="InterestRate" class="form-control" />
                            <span asp-validation-for="InterestRate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Period" class="control-label"></label>
                            <input asp-for="Period" class="form-control" />
                            <span asp-validation-for="Period" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Amount" class="control-label"></label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Commission" class="control-label"></label>
                            <input asp-for="Commission" class="form-control" />
                            <span asp-validation-for="Commission" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="AccountId" class="control-label"></label>
                            <select asp-for="AccountId" class="custom-select">
                                <option value="" selected>Choose Account</option>
                                @foreach (var account in (List<Account>)ViewData["Accounts"])
                                {
                                    <option value="@account.Id">@account.IBAN | @account.Balance | @account.Curency.IsoCode</option>
                                };
                            </select>
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-a" />
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a href="/Products/Loans">Back to List</a>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
