                    <div class="col-md-5 col-lg-4">
                        <div class="property-price d-flex justify-content-center foo">
                            <div class="card-header-c d-flex">
                                <div class="card-box-ico">
                                    <span class="ion-money">@Model.CurencyIso</span>
                                </div>
                                <div class="card-title-c align-self-center">
                                    <h5 class="title-c">@Model.Amount</h5>
                                </div>
                            </div>
                        </div>
                        <div class="property-summary">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="title-box-d section-t4">
                                        <h3 class="title-d">Quick Summary</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="summary-list">
                                <ul class="list">
                                    <li class="d-flex justify-content-between">
                                        <strong>Product Name:</strong>
                                        <span>@Model.Name</span>
                                    </li>
                                    <li class="d-flex justify-content-between">
                                        <strong>Seller:</strong>
                                        <span>@Model.Seller</span>
                                    </li>
                                    <li class="d-flex justify-content-between">
                                        <strong>Interest Rate:</strong>
                                        <span>@Model.InterestRate%</span>
                                    </li>
                                    <li class="d-flex justify-content-between">
                                        <strong>Amount up to:</strong>
                                        <span>@Model.Amount @Model.CurencyIso</span>
                                    </li>
                                    <li class="d-flex justify-content-between">
                                        <strong>Period up to:</strong>
                                        <span>@Model.Period months</span>
                                    </li>
                                    <li class="d-flex justify-content-between">
                                        <strong>Charge Absorption:</strong>
                                        <span>@Model.Commission %</span>
                                    </li>
                                    <li class="d-flex justify-content-between">
                                        <strong>Curency:</strong>
                                        <span>@Model.CurencyName</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7 col-lg-7 section-md-t3">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="title-box-d">
                                    <h3 class="title-d">Description</h3>
                                </div>
                            </div>
                        </div>
                        <div class="property-description">
                            <p class="description color-text-a">
