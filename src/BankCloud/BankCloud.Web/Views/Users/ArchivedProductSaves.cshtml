@model IEnumerable<BankCloud.Models.ViewModels.ProductsSavesViewModel>

@{
    ViewData["Title"] = "ArchivedProductSaves";
}

<section class="section-agents section-t8">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Archived Product Saves</h1>
                    <span class="color-text-a">Grid Saves</span>
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/Users/Products">Back</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<section class="property-grid grid">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="grid-option">
                    @*<form>
                            <select class="custom-select">
                                <option selected>All</option>
                                <option value="1">New to Old</option>
                                <option value="2">Old  to New</option>
                            </select>
                        </form>*@
                </div>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card-box-a card-shadow">
                        <div class="img-box-a">
                            <img src="@item.AdUrl" alt="" class="img-a img-fluid">
                        </div>
                        <div class="card-overlay">
                            <div class="card-overlay-a-content">
                                <div class="card-header-a">
                                    <h2 class="card-title-a">
                                        <a href="/Users/RestoreProductloan/@item.Id">
                                            Archived
                                            <br /> @item.Name
                                        </a>
                                    </h2>
                                </div>
                                <div class="card-body-a">
                                    <div class="price-box d-flex">
                                        <a href="/Users/RestoreProductSave/@item.Id"><span class="price-a">Restore</span></a>
                                    </div>
                                </div>
                                <div class="card-footer-a">
                                    <ul class="card-info d-flex justify-content-around">
                                        <li>
                                            <h4 class="card-info-title">Curency</h4>
                                            <span>
                                                @item.Currency
                                            </span>
                                        </li>
                                        <li>
                                            <h4 class="card-info-title">Rate</h4>
                                            <span>
                                                @item.InterestRate %
                                            </span>
                                        </li>
                                        <li>
                                            <h4 class="card-info-title">Period to</h4>
                                            @if (item.Period == 0)
                                            {
                                                <span>Open</span>
                                            }
                                            else
                                            {
                                                <span>
                                                    @item.Period months
                                                </span>
                                            }
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


